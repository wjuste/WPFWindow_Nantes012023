<Window x:Class="QuizApp.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizApp"
        mc:Ignorable="d"
        Title="QuizWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <StackPanel Margin="10">

        <TextBlock x:Name="TBTimer" Margin="10,5"/>

        <!--Afficher le titre du Quiz-->
        <TextBlock  x:Name="TBQuizTitle" Margin="10, 5"/>

        <TextBlock  x:Name="TBQuestionTitle" Margin="10, 5"/>

        <!--Contiendra la liste des responses-->
        <StackPanel Margin="10, 5" x:Name="PanelResponses">

        </StackPanel>

        <Button x:Name="BtnNext" Content="Suivant" Click="BtnNext_Click" Margin="40,5"/>

    </StackPanel>
</Window>
