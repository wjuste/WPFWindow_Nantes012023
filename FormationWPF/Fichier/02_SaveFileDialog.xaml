<Window x:Class="FormationWPF.Fichier._02_SaveFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FormationWPF.Fichier"
        mc:Ignorable="d"
        Title="_02_SaveFileDialog" Height="450" Width="800">
    <DockPanel Margin="10">
        <WrapPanel DockPanel.Dock="Top" HorizontalAlignment="Center">
            <Button x:Name="btnSaveFile" Click="btnSaveFile_Click" Content="Save File" Margin="0,10,0,0" />
        </WrapPanel>
        <TextBox x:Name="txtEditor" TextWrapping="Wrap" Margin="10" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    </DockPanel>
</Window>
