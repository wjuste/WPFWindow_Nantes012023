<Window x:Class="FormationWPF.MiseEnPage._02_StackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FormationWPF.MiseEnPage"
        mc:Ignorable="d"
        Title="_02_StackPanel" Height="100" Width="300">
    <StackPanel Orientation="Horizontal">
        
            <!--
                Empiplement qui peuvent depasser le cadre (pas de wrap)
                Par defaut l'empilament est vertical 
                On peut modifier le comportement par defaut avec l'attribut Orientation 
               -->
        <Button x:Name="button1">Button1</Button>
        <Button x:Name="button2" Height="23" Width="75">Button2</Button>
        <Button x:Name="button3" Height="23" Width="75">Button3</Button>
        <Button x:Name="button4" Height="23" Width="75">Button4</Button>
        <Button x:Name="button5" Height="23" Width="75">Button5</Button>

    </StackPanel>
</Window>
